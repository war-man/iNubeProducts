@model inube.Services.Notification.Models.ContractModel

@{
    ViewData["Title"] = "ContractTemplate";
}


<!DOCTYPE html>

<html>
<head>
    <style>
        table, th, td {
            border: 1px solid black;
            width: auto;
            border-collapse: collapse;
        }
    </style>
</head>
<body>

    <div class="container" style="padding: 20px;">
        <table class="table table-condensed" style="width:100%;border: 1px solid #000;padding: 5px; background-image:url(/images/watermark.jpg);background-repeat:repeat">
            <tbody>
                <div>
                <tr style="width: 100%">
                    <td style="width: 50%; vertical-align: top; padding: 5px;border: 1px solid #000;">
                        <img src="~/images/PNBAllianz.png" style="float: left;">
                    </td>

                    <td rowspan="2" style="width: 100%; border: 1px solid #000;">
                        <table style="width: 100%">
                            <tbody>
                                <tr>

                                    <td style="width: 50%;padding: 5px;border: 1px solid #000;">
                                        <span><strong>Policies and Procedures</strong></span><br>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width: 100%;padding: 5px;border: 1px solid #000;">
                                        <span><strong>LEADER EXPANSION AGENCY PROGRAM (L.E.A.P)</strong></span><br>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </td>
                </tr>
</div>
                <div>
                <p style="text-align:center;">
                    <span><strong><u>GOAL SHEET - LEADER (EXTERNAL)</u></strong></span>
                </p>
                <p style="text-align:center;">  <span style="float:unset;"><strong>Managing Partner - Level 1</strong></span></p>

               </div>

                            <tr>
                                    <table style="width: 100%">
                                        <thead>
                                            <tr bgcolor="#ccddff">
                                                <th style="border: 1px solid #000;padding: 5px;">Managing Partner</th>
                                                <th style="border: 1px solid #000;padding: 5px;">Level 1</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <tr style="text-align:center;" bgcolor="#e6eeff">
                                                <td style="border: 1px solid #000;padding: 5px;"> Allowance </td>
                                                <td style="border: 1px solid #000;padding: 5px;" bgcolor="#ffe6ff">@Html.DisplayFor(model => model.Allowance)</td>
                                            </tr>
                                            <tr style="text-align:center;" bgcolor="#e6eeff">
                                                <td style="border: 1px solid #000;padding: 5px;">Total Cost</td>
                                                <td style="border: 1px solid #000;padding: 5px;" bgcolor="#ffe6ff">@Html.DisplayFor(model => model.TotalCost)</td>
                                            </tr>
                                            <tr style="text-align:center;" bgcolor="#e6eeff">
                                                <td style="border: 1px solid #000;padding: 5px;">ANP Target</td>
                                                <td style="border: 1px solid #000;padding: 5px;" bgcolor="#ffe6ff">@Html.DisplayFor(model => model.AnpTarget) </td>
                                            </tr>
                                        </tbody>
                                    </table>
                            </tr>
            
             
                                    <table style="width: 100%">
                                        <thead>
                                            <tr bgcolor="#ccddff">
                                                <th style="border: 1px solid #000;padding: 5px;">Level 1</th>
                                                <th style="border: 1px solid #000;padding: 5px;">Year 1 Total</th>
                                                <th style="border: 1px solid #000;padding: 5px;">Year 2 Total</th>
                                                <th style="border: 1px solid #000;padding: 5px;">Year 3 Total</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <tr bgcolor="#e6eeff">
                                                <td style="border: 1px solid #000;padding: 5px;"> Monthly ANP </td>
                                                @foreach (var item in Model.lstANPModels)
                                                {
                                                    <td style="border: 1px solid #000;padding: 5px;text-align:center"; bgcolor="white";>@Html.DisplayFor(model => item.MonthlyAnp)</td>
                                                }
                                            </tr>
                                            <tr bgcolor="#e6eeff">
                                                <td style="border: 1px solid #000;padding: 5px;">Cumalative ANP</td>
                                                @foreach (var item in Model.lstANPModels)
                                                {
                                                    <td style="border: 1px solid #000;padding: 5px;text-align:center"; bgcolor="white";>@Html.DisplayFor(model => item.CumulativeAnp)</td>
                                                }
                                            </tr>
                                            <tr bgcolor="#e6eeff">
                                                <td style="border: 1px solid #000;padding: 5px;">Ending ManPower</td>
                                                @foreach (var item in Model.lstANPModels)
                                                {
                                                    <td style="border: 1px solid #000;padding: 5px;text-align:center"; bgcolor="white">@Html.DisplayFor(model => item.EndingManpower) </td>
                                                }
                                            </tr>
                                            <tr bgcolor="#e6eeff">
                                                <td style="border: 1px solid #000;padding: 5px;">Activity Ratio</td>
                                                @foreach (var item in Model.lstANPModels)
                                                {
                                                    <td style="border: 1px solid #000;padding: 5px;text-align:center" bgcolor="white">@Html.DisplayFor(model => item.ActivityRatio) </td>
                                                }
                                            </tr>
                                            <tr bgcolor="#e6eeff">
                                                <td style="border: 1px solid #000;padding: 5px;">Active Agent</td>
                                                @foreach (var item in Model.lstANPModels)
                                                {
                                                    <td style="border: 1px solid #000;padding: 5px;text-align:center"; bgcolor="white">@Html.DisplayFor(model => item.ActiveAgent) </td>
                                                }
                                            </tr>
                                        </tbody>

                                    </table>

            </tbody>
        </table>
    </div>
</body>
</html>